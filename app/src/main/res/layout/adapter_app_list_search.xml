<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.chrynan.launcher.model.AppListSearchViewModel"/>

        <variable
            name="listener"
            type="com.chrynan.launcher.ui.adapter.AppListSearchAdapter.ClickListener"/>

    </data>

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:onClick="@{() -> listener.onSearchButtonClick()}"
        android:text="@{model.text}"/>

</layout>